<section
  class='bg-gray-800 w-96 rounded-3xl px-6 py-5 drop-shadow-xl z-30 flex-0'
>
  <header class='mb-5'>
    <h3 class='text-white font-bold text-2xl'>Stocks</h3>
  </header>
  <main class='flex flex-col gap-3'>
    {{#each stocks}}
      {{> sidebarItem stock=this selectedStock=../selectedStock }}
    {{/each}}
    <a href="/add" class="border block border-gray-700 hover:bg-gray-700 cursor-pointer text-white font-bold text-sm px-5 py-3 rounded-xl text-center transition-all">Add</a>
  </main>
</section>