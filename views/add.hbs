<div class='flex-1 flex justify-center items-start'>
  <div class='w-1/3 rounded-3xl bg-gray-800 px-6 py-5 drop-shadow-lg'>
    <header class='mb-5'>
      <h3 class='text-white font-bold text-2xl'>Add Stock</h3>
    </header>
    <main>
      <form class='flex flex-col gap-3' method='get' action='/add/save'>
        <div class='flex flex-col gap-2'>
          <label class='text-sm text-white font-bold'>Symbol*</label>
          <input
            required
            name='symbol'
            type='text'
            class='p-3 rounded-xl bg-gray-700 text-white'
          />
        </div>
        <div className='flex gap-2'>
          <input
            type='submit'
            value='Add'
            class='bg-primary-500 hover:bg-primary-600 active:bg-primary-700 transition-all text-sm text-white font-bold py-2 px-3 rounded-xl'
          />
          <input
            type='button'
            value='Cancel'
            onclick='window.history.go(-1)'
            class='hover:bg-gray-700 active:bg-gray-600 transition-all text-sm text-white font-bold py-2 px-3 rounded-xl'
          />
        </div>
      </form>
    </main>
  </div>
</div>